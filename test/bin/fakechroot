#!/bin/sh

pwd=`dirname $0`
abs_top_srcdir=${abs_top_srcdir:-`cd "$pwd/../.." 2>/dev/null && pwd -P`}

if ! command -v chroot >/dev/null; then
    PATH="${PATH:-/usr/bin:/bin}:/usr/sbin:/sbin"
    export PATH
fi

chroot=`command -v chroot`

FAKECHROOT_CMD_SUBST="/usr/sbin/chroot.real=$chroot:$chroot=$abs_top_srcdir/scripts/chroot.fakechroot"
export FAKECHROOT_CMD_SUBST

"$abs_top_srcdir/scripts/fakechroot" --config-dir "$abs_top_srcdir/scripts" --lib "$abs_top_srcdir/src/.libs/libfakechroot.so" "$@"
exit $?

#!/bin/sh

srcdir=${srcdir:-.}

if [ -f src/.libs/libfakechroot.so ]; then
    lib=`cd \`pwd\`/src/.libs 2>/dev/null && pwd`/libfakechroot.so
elif [ -f ../src/.libs/libfakechroot.so ]; then
    lib=`cd \`pwd\`/../src/.libs 2>/dev/null && pwd`/libfakechroot.so
else
    lib=/usr/local/lib/fakechroot/libfakechroot.so
fi

if [ -x scripts/fakechroot ]; then
    fakechroot=`cd \`pwd\`/scripts 2>/dev/null && pwd`/fakechroot
elif [ -x ../scripts/fakechroot ]; then
    fakechroot=`cd \`pwd\`/../scripts 2>/dev/null && pwd`/fakechroot
else
    fakechroot=/usr/local/bin/fakechroot
fi

exec "$fakechroot" --lib "$lib" "$@"
